<div class="col-3">
    <a onclick="history.back()" type="button" class="btn text-white align-self-center"
        style="background-color: #563d7c ">
        <i class="bi bi-backspace-fill"></i> Go Back!</a>
</div>
<br>
<div class="view-customer p-5">
    {{#each rows}}
    <div class="row mb-5">
        <div class="col text-center">
            <h2 class=" text-success  text-decoration-underline">{{this.Customer_ID}} -- {{this.Cust_Name}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-bordered  table-hover border border-dark table-striped bg-light">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Customer_ID</th>
                        <th scope="col">Cust_Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">{{this.Customer_ID}}</th>
                        <td>{{this.Cust_Name}}</td>
                        <td>{{this.Email}}</td>
                        <td>{{this.Phone}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col">
                <b>Address</b>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{this.Address}}
            </div>
        </div>
    </div>
    {{/each}}
</div>