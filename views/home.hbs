<body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-left mb-0"><i class="bi bi-phone "></i>Mobile Store System</h3>
                <nav class="nav nav-masthead justify-content-center float-md-right">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                    <a class="nav-link" href="/company">Company</a>
                    <!--a class="nav-link" href="/store">Store</a-->
                    <a class="nav-link" href="/mobile">Mobile</a>
                    <a class="nav-link" href="/orders">Order</a>
                    <a class="nav-link" href="/customer">Customer</a>
                    {{#if currentUser}}
                    <a class="nav-link" href="#"><i class="bi bi-person-square"></i>{{user}}</a>
                    <a class="nav-link" href="/logout">Logout</a>
                    {{else}}
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                    {{/if}}
                </nav>
            </div>
        </header>
        <main class="px-3">
            <p class="lead">
            <h2>Welcome to Mobile Management! </h2> Jump right in and explore our website. <br>
            Feel free to share some of your feedback to our email!</p>
            <a href="/mobile" class="btn btn-lg btn-secondary font-weight-bold border-white bg-white">View
                Mobiles</a>
        </main>

        <footer class="mt-auto text-white-50">
            <p>&copy; 2021 </p>
        </footer>


    </div>

    <script>
        (function () {
            'use strict'
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')
            // Loop over them and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
