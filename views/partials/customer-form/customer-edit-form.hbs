<div class="col-6">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" value="{{this.Customer_ID}}"
            placeholder="Customer ID" name="Customer_ID" readonly>
        <label for="floatingInput" class="form-label">Customer ID</label>
    </div>
</div>
<div class="col-6">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" value="{{this.Cust_Name}}"
            placeholder="Customer Name" name="Cust_Name" required>
        <label for="floatingInput">Customer Name</label>
    </div>
</div>
<div class="col-6">
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="floatingInput" value="{{this.Email}}" placeholder="email@email.com"
            name="Email">
        <label for="floatingInput">Email</label>
    </div>
</div>
<div class="col-6">
    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" value="{{this.Phone}}" placeholder="Phone"
            name="Phone" required>
        <label for="floatingInput">Phone</label>
    </div>
</div>
<div class="col-12">
    <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Address" id="address" name="Address"
            style="height: 200px">{{this.Address}}</textarea>
        <label for="address">Address</label>
    </div>
</div>
<div class="col-12 d-grid">
    <button class="btn btn-success" type="submit">Update</button>
</div>