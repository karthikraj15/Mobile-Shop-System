{{#if removedStore}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    Store has been removed.
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
    <div class="col-6">
        <h1 class=" text-success text-decoration-underline">Stores</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/store/addstore" type="button" class="btn btn-success align-self-center">+ Add store</a>
    </div>
</div>

<table class="table table-bordered  table-hover border border-dark table-striped bg-light">
    <thead class="table-dark">
        <tr>
            <th scope="col">Store ID</th>
            <th scope="col">Store Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Location</th>
            <th scope="col">Company ID</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each rows}}
        <tr>
            <th scope="row">{{this.Store_ID}}</th>
            <td>{{this.Store_Name}}</td>
            <td>{{this.Phone}}</td>
            <td>{{this.Location}}</td>
            <td><a href="/company/viewcompany/{{this.Comp_ID}}" class="text-decoration-none">{{this.Comp_ID}}</a> </td>

            <td class="text-end">
                <a href="/store/viewstore/{{this.Store_ID}}" type="button" class="btn btn-danger btn-small"><i
                        class="bi bi-eye"></i>
                    View</a>
                <a href="/store/editstore/{{this.Store_ID}}" type="button" class="btn btn-warning btn-small"><i
                        class="bi bi-pencil"></i>
                </a>
                <a href="/store/{{this.Store_ID}}" type="button" class="btn btn-secondary btn-small">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>