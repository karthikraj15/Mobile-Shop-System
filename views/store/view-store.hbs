<div class="col-3">
    <a onclick="history.back()" type="button" class="btn text-white align-self-center"
        style="background-color: #563d7c ">
        <i class="bi bi-backspace-fill"></i> Go Back!</a>
</div>
<br>
<div class="view-store p-5">
    {{#each rows}}
    <div class="row mb-5">
        <div class="col text-center">
            <h2 class=" text-success text-decoration-underline">{{this.Store_ID}} -- {{this.Store_Name}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-bordered  table-hover border border-dark table-striped bg-light">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Store ID</th>
                        <th scope="col">Store Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Location</th>
                        <th scope="col">Company ID</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">{{this.Store_ID}}</th>
                        <td>{{this.Store_Name}}</td>
                        <td>{{this.Phone}}</td>
                        <td>{{this.Location}}</td>
                        <td><a href="/company/viewcompany/{{this.Comp_ID}}"
                                class="text-decoration-none">{{this.Comp_ID}}</a> </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col">
                <b>Description</b>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{this.Description}}
            </div>
        </div>
    </div>
    {{/each}}
</div>